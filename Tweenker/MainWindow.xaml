                                            </Setter>
                                            <Setter TargetName="PART_Track" Property="LayoutTransform">
                                                <Setter.Value>
                                                    <RotateTransform Angle="-90" />
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Width" Value="Auto" />
                                            <Setter Property="Height" Value="8" />
                                            <Setter TargetName="ScrollBarThumb" Property="Tag" Value="Horizontal" />
                                            <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand" />
                                            <Setter TargetName="PageUp" Property="Command" Value="ScrollBar.PageRightCommand" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ScrollViewer.Resources>
                <StackPanel
                    Orientation="Vertical"
                    VerticalAlignment="Top"
                Name="songList"
                ></StackPanel>
            </ScrollViewer>
        </Grid>
        <Grid
            Name="FavView"
             Margin="60 0 200 0"
            Background="#404040"
            Visibility="Hidden"
            >
            <Grid
                     VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    >
                <Label
                     VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="7"
                    Content="{materialDesign:PackIcon Kind=Heart, Size=55}"
                    Foreground="White"
                    ></Label>
                <Label
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Content="Favorites"
                    Margin="70 0 0 0"
                    Foreground="White"
                    FontSize="50"
                    FontWeight="Bold"
                    ></Label>
            </Grid>
            <Grid
                    VerticalAlignment="Top"
                    Height="4"
                Margin="0 75 0 0"
                Background="#2b2b2b"
                    ></Grid>
        </Grid>

        <!--#region PlayContainer-->

        <Grid
            VerticalAlignment="Bottom"
            Height="60"
            Background="#303030"
            >
            <materialDesign:Card
             materialDesign:ShadowAssist.ShadowEdges="Top"
            materialDesign:ShadowAssist.ShadowDepth="Depth4"
             Background="#303030"
                >
                <Grid
                    Background="#303030"
                    >
                    <TextBlock
                Name="songName"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="16"
                Foreground="White"
                Text="Your Song"
                Margin="20 12 0 0"
                Width="400"
                TextTrimming="CharacterEllipsis"
                ></TextBlock>
                    <TextBlock
                Name="songMemo"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="13"
                Foreground="#8f8f8f"
                Text="Your Memo"
                Margin="20 34 0 0"
                Width="400"
                TextTrimming="CharacterEllipsis"
                ></TextBlock>
                    <CheckBox
                Checked="playSongB_Checked"
                Unchecked="playSongB_Unchecked"
                Name="playSongB"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignToolButton}"
                Content="{materialDesign:PackIcon Kind=PlayCircleOutline, Size=37}"
                Foreground="White"
                Height="50"
                Width="50"
                Background="Transparent"
                BorderBrush="Transparent"
                ></CheckBox>
                    <Button
                Name="nextSongB"
                Click="nextSongB_Click"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignToolButton}"
                Content="{materialDesign:PackIcon Kind=SkipNextOutline, Size=30}"
                Foreground="White"
                Height="50"
                Width="50"
                Background="Transparent"
                BorderBrush="Transparent"
                Margin="100 0 0 0"
                ></Button>

                    <Button
                Name="previousSongB"
                Click="previousSongB_Click"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignToolButton}"
                Content="{materialDesign:PackIcon Kind=SkipPreviousOutline, Size=30}"
                Foreground="White"
                Height="50"
                Width="50"
                Background="Transparent"
                BorderBrush="Transparent"
                Margin="0 0 100 0"
                ></Button>

                    <Grid
                HorizontalAlignment="Center"
                Width="1"
                Background="White"
                Margin="0 10 150 10"
                ></Grid>

                    <Grid
                HorizontalAlignment="Center"
                Width="1"
                Background="White"
                Margin="150 10 0 10"
                ></Grid>

                    <CheckBox
                Name="repeatSongB"
                Checked="repeatSongB_Checked"
                Unchecked="repeatSongB_Unchecked"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignToolButton}"
                Content="{materialDesign:PackIcon Kind=Autorenew, Size=25}"
                Foreground="#616161"
                Height="50"
                Width="50"
                Background="Transparent"
                BorderBrush="Transparent"
                Margin="0 0 200 0"
                ></CheckBox>

                    <CheckBox
                Name="randomSongB"
                Checked="randomSongB_Checked"
                Unchecked="randomSongB_Unchecked"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignToolButton}"
                Content="{materialDesign:PackIcon Kind=Shuffle, Size=25}"
                Foreground="#616161"
                Height="50"
                Width="50"
                Background="Transparent"
                BorderBrush="Transparent"
                Margin="200 0 0 0"
                ></CheckBox>

                    <Label
                Content="{materialDesign:PackIcon Kind=VolumeHigh, Size=30}"
                Foreground="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0 0 140 0"
                ></Label>

                    <Slider
                Name="soundSlider"
                Minimum="0"
                Maximum="100"
                Value="50"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Width="100"
                Margin="0 0 36 0" ValueChanged="soundSlider_ValueChanged"
                />
                </Grid>
            </materialDesign:Card>
        </Grid>
        <!--#endregion-->

        <ProgressBar
            Name="mainSlider"
            VerticalAlignment="Bottom"
            Margin="0 0 0 56"
            Background="#48b4f0"
            BorderBrush="#48b4f0"
            MouseDown="mainSlider_MouseDown"
            ValueChanged="mainSlider_ValueChanged"
            ></ProgressBar>
        
        
    </Grid>
</Window>
