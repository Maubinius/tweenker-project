<Window x:Class="Tweenker.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tweenker"
        mc:Ignorable="d"
        Title="MainWindow" 
        MinHeight="750" 
        MinWidth="1200"
        Height="750"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        >
    <Grid
        Name="MainView"
        >
        <Grid
        Name="StaticControls"
        >
            <!--#region LeftCointainer-->
            <Grid
            Name="leftcontainer"
            HorizontalAlignment="Left"
                Margin="0 0 0 60"
            >
                <StackPanel Orientation="Vertical"
            HorizontalAlignment="Left"
            Width="60"
            Background="#2b2b2b"
            >
                    <Button 
                        x:Name="homeB"
                        Click="homeB_Click"
                        Background="Transparent"
                        Cursor="Hand"
                        Height="60"
                        Width="Auto"
                        Style="{StaticResource MaterialDesignToolButton}"
                        >
                        <Image
                Source="img/logo.png"
                RenderOptions.BitmapScalingMode="HighQuality"
                RenderOptions.EdgeMode="Aliased"
                UseLayoutRounding="True"
                />
                    </Button>
                    <Button
                        Name="addB"
                        Click="addB_Click"
                Margin="0 8 0 0"
                Width="Auto"
                Height="60"
                BorderThickness="0"
                Background="Transparent"
                Content="{materialDesign:PackIcon PlusThick, Size=37}"
                Foreground="White"
                    Style="{StaticResource MaterialDesignToolButton}"
                    ToolTip="Add a Playlist" Cursor="Hand"
                ></Button>

                    <Button
                        Name="favB"
                        Click="favB_Click"
                Margin="0 5 0 0"
                Width="Auto"
                Height="60"
                BorderThickness="0"
                Background="Transparent"
                Content="{materialDesign:PackIcon CardsHeart, Size=31}"
                Foreground="White"
                    Style="{StaticResource MaterialDesignToolButton}"
                    ToolTip="Favorite Songs"
                ></Button>
                </StackPanel>
                <Button
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="60"
                Height="60"
                BorderThickness="0"
                Background="Transparent"
                Content="{materialDesign:PackIcon Cog, Size=33}"
                Foreground="White"
                Style="{StaticResource MaterialDesignToolButton}"
                ToolTip="Settings"
                ></Button>
            </Grid>
            <!--#endregion-->

            <!--#region RightContainer-->
            <Grid
            HorizontalAlignment="Right"
            Name="rightcontainer"
                Margin="0 0 0 60"
            >
                <StackPanel 
                Orientation="Vertical"
                Width="200"
                Background="#2b2b2b"
                >
                    <Label 
                    Content="Hey, Adrian"
                    Foreground="White"
                    FontSize="20"
                    Margin="4 5 0 5"
                    />
                    <Grid
                    Height="2"
                    Background="#3b3b3b"
                    />
                </StackPanel>
                <ScrollViewer
                    Margin="0 46 0 45"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    >
                    <ScrollViewer.Resources>
                        <Style x:Key="ScrollThumbs" TargetType="{x:Type Thumb}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Thumb}">
                                        <Grid x:Name="Grid">
                                            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto" Fill="Transparent" />
                                            <Border x:Name="ScrollBarRectangle" CornerRadius="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto"  Background="{TemplateBinding Background}" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="Tag" Value="Horizontal">
                                                <Setter TargetName="ScrollBarRectangle" Property="Width" Value="Auto" />
                                                <Setter TargetName="ScrollBarRectangle" Property="Height" Value="7" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                        <Style TargetType="{x:Type ScrollBar}">
                            <Setter Property="Margin" Value="-5,0,0,0" />
                            <Setter Property="Stylus.IsFlicksEnabled" Value="false" />
                            <Setter Property="Foreground" Value="#FF8C8C8C" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Width" Value="8" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                                        <Grid x:Name="GridRoot" Width="8" Background="{TemplateBinding Background}">
                                            <Track x:Name="PART_Track" IsDirectionReversed="true" Focusable="false">
                                                <Track.Thumb>
                                                    <Thumb x:Name="ScrollBarThumb" Background="{TemplateBinding Foreground}" Style="{StaticResource ScrollThumbs}" />
                                                </Track.Thumb>
                                                <Track.IncreaseRepeatButton>
                                                    <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="false" />
                                                </Track.IncreaseRepeatButton>
                                                <Track.DecreaseRepeatButton>
                                                    <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="false" />
                                                </Track.DecreaseRepeatButton>
                                            </Track>
                                        </Grid>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsEnabled" Value="false">
                                                <Setter TargetName="ScrollBarThumb" Property="Visibility" Value="Collapsed" />
                                            </Trigger>
                                            <Trigger Property="Orientation" Value="Horizontal">
                                                <Setter TargetName="GridRoot" Property="LayoutTransform">
                                                    <Setter.Value>
                                                        <RotateTransform Angle="-90" />
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="PART_Track" Property="LayoutTransform">
                                                    <Setter.Value>
                                                        <RotateTransform Angle="-90" />
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Width" Value="Auto" />
                                                <Setter Property="Height" Value="8" />
                                                <Setter TargetName="ScrollBarThumb" Property="Tag" Value="Horizontal" />
                                                <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand" />
                                                <Setter TargetName="PageUp" Property="Command" Value="ScrollBar.PageRightCommand" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>
                    <WrapPanel
                    Orientation="Vertical"
                                        Name="playlistList"
                        ></WrapPanel>
                </ScrollViewer>
                <materialDesign:Card
                    VerticalAlignment="Bottom"
                    Height="45"
                     Background="#2b2b2b"
                    materialDesign:ShadowAssist.ShadowEdges="Top"
                    materialDesign:ShadowAssist.ShadowDepth="Depth2"
                    >
                    <Grid>
                        <Label
                            Name="startTime"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Foreground="White"
                        FontSize="16"
                        Content="00:00"
                        Margin="35 0 0 0"
                        ></Label>

                        <Label
                            Name="endTime"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Foreground="White"
                        FontSize="16"
                        Content="00:00"
                        Margin="0 0 35 0"
                        ></Label>

                        <Grid
                            Background="White"
                            Width="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Height="20"
                            ></Grid>
                    </Grid>
                </materialDesign:Card>
                <Grid
                    HorizontalAlignment="Left"
                    Width="1"
                    Background="#368ab9"
                    ></Grid>
            </Grid>
            <!--#endregion-->
        </Grid>
        <Grid
            Name="AddView"
            Margin="60 0 200 0"
            Background="#404040"
            Visibility="Hidden"
            >
            <Grid
                VerticalAlignment="Top"
                Height="400"
                            Background="#606060">
                <Image
                    Name="bannerImg"
                    RenderOptions.BitmapScalingMode="HighQuality"
                RenderOptions.EdgeMode="Aliased"
                UseLayoutRounding="True"
                        Stretch="Fill"
                    Height="400"
                    ></Image>
                <Label
                    Content="Add Playlist"
                    Foreground="White"
                    FontSize="30"
                    Margin="30 20 0 0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    />
                <materialDesign:Card
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="30 85 0 0"
                    Height="250"
                    Width="250"
                    Background="#707070"
                    >
                    <Image
                        Name="profileImg"
                                        RenderOptions.BitmapScalingMode="HighQuality"
                RenderOptions.EdgeMode="Aliased"
                UseLayoutRounding="True"
                        Stretch="Fill"
                        ></Image>
                </materialDesign:Card>
                <TextBox
                    Name="nameTB"
                    HorizontalAlignment="Left" 
                    Cursor="IBeam"
                    VerticalAlignment="Top"
                    Margin="310 85 0 0"
                    Width="200"
                    Background="#707070"
                    FontSize="18"
                    Foreground="White"
                    materialDesign:HintAssist.Hint=" Name"
                    ></TextBox>
                <TextBox
                    Name="bioTB"
                    Cursor="IBeam"
                    VerticalAlignment="Top"
                    Margin="310 130 20 0"
                    Width="Auto"
                    Background="#707070"
                    FontSize="18"
                    Foreground="White"
                    materialDesign:HintAssist.Hint=" Bio"
                    Height="200"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"

                    ></TextBox>
                <Button
                    Click="chooseBanner_Click"
                    Name="chooseBanner"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Content="Choose Banner"
                    Margin="10"
                    Background="#707070"
                    BorderThickness="0"
                    ></Button>

                <Button
                    Click="choosePicture_Click"
                    Name="choosePicture"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="90 0 0 20"
                    Width="125"
                    Content="Choose"
                    Background="#707070"
                    BorderThickness="0"
                    ></Button>

                <Button
                    Name="addPlaylistB"
                    Click="addPlaylistB_Click"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 20 20"
                    Width="100"
                    Content="Add"
                    BorderThickness="0" Cursor="Hand"
                    ></Button>

                <Button
                    Name="clearB"
                    Click="clearB_Click"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 140 20"
                    Width="100"
                    Content="Clear"
                    Background="#707070"
                    BorderThickness="0"
                    ></Button>
            </Grid>
            <Grid
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="0 350 0 0"
                >
                <Label
                Foreground="White"
                Content="{materialDesign:PackIcon Kind=Update, Size=160}"
                ></Label>
            <TextBlock
                Foreground="White"
                FontSize="30"
                xml:space="preserve"
                Margin="40 6 0 0"
                >
                Unfortunately there is nothing here yet, 
                wait for the next update :)
            </TextBlock>
            </Grid>
        </Grid>
        <Grid
