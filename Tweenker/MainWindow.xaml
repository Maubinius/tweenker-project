                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ScrollViewer.Resources>
                <Grid>
                    <Grid
                VerticalAlignment="Top"
                Height="320"
                Background="#606060">
                        <Image
                    Name="cpBanner"
                    RenderOptions.BitmapScalingMode="HighQuality"
                RenderOptions.EdgeMode="Aliased"
                UseLayoutRounding="True"
                        Stretch="Fill"
                    ></Image>
                    </Grid>
                    <materialDesign:Card
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="30 35 0 0"
                    Height="250"
                    Width="250"
                    Background="#707070"
                    >
                        <Image
                    Name="cpProfile"
                    RenderOptions.BitmapScalingMode="HighQuality"
                RenderOptions.EdgeMode="Aliased"
                UseLayoutRounding="True"
                        Stretch="Fill"
                    ></Image>
                    </materialDesign:Card>

                    <Label
                Name="cpName"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Content="Name"
                Foreground="White"
                Margin="300,35,0,0"
                FontSize="32"
                Width="600"
                Height="Auto"
                ></Label>
                    <Label
                Name="cpBio"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Content="Text"
                Foreground="White"
                Margin="300 80 0 0"
                FontSize="18"
                Width="600"
                Height="200"
                ></Label>
                    <Grid
                        VerticalAlignment="Top"
                        Margin="0 320 0 0"
                        Height="50"
                        >
                        <TextBlock
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Foreground="White"
                Margin="40 0 0 0"
                FontSize="18"
                    Width="360"
                 TextAlignment="Left"
                            Text="Name"
                            FontWeight="SemiBold"
                ></TextBlock>

                        <TextBlock
                Width="360"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Foreground="White"
                Margin="0 0 120 0"
                FontSize="18"
                TextAlignment="Right"
                            Text="Memo"
                            FontWeight="SemiBold"
                ></TextBlock>

                        <TextBlock
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Foreground="White"
                Margin="0 0 30 0"
                FontSize="18"
                            Text="Duration"
                            FontWeight="SemiBold"
                    ></TextBlock>
                        <Grid
                        Height="1"
                        Background="White"
                        VerticalAlignment="Bottom"
                            Margin="40 0 30 0"
                        ></Grid>
                    </Grid>

                    <StackPanel
                    Orientation="Vertical"
                    Name="cpsongList"
                    Margin="0 370 0 0"
                ></StackPanel>

                </Grid>
            </ScrollViewer>
        </Grid>
        <Grid
            x:Name="HomeView"
             Margin="60 0 200 0"
            Background="#404040"
            Visibility="Visible"
            >
            <Grid
                VerticalAlignment="Top"
                Height="65"
                Background="#303030"
                >
                <TextBlock
                Text="Welcome to Tweenker"
                Foreground="White"
                FontSize="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 8 0 0"
                ></TextBlock>
                <TextBlock
                Text="Listen to the Music you love"
                Foreground="White"
                FontSize="25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 62 0 0"
                ></TextBlock>
                <Button
                    Name="addSongB"
                    Click="addSongB_Click"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0 0 10 0"
                    Style="{StaticResource MaterialDesignToolButton}"
                    Content="{materialDesign:PackIcon Kind=Plus, Size=30}"
                    Foreground="White"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Width="50"
                    Height="50"
                    ></Button>
            </Grid>
            <materialDesign:Card
                    VerticalAlignment="Top"
                Margin="0 65 0 0"
                Height="2"
                materialDesign:ShadowAssist.ShadowEdges="Bottom"
                materialDesign:ShadowAssist.ShadowDepth="Depth2"
                    >
                <materialDesign:Card.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="#FF303030" Offset="0.1"/>
                        <GradientStop Color="#FF606060" Offset="0.5"/>
                        <GradientStop Color="#FF303030" Offset="0.9"/>
                    </RadialGradientBrush>
                </materialDesign:Card.Background>
            </materialDesign:Card>
            <Grid
            Height="50"
                Width="Auto"
            Background="Transparent"
                    VerticalAlignment="Top"
                    Margin="30 70 30 0"
            >
                <Grid>
                    <TextBlock
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Foreground="White"
                Margin="10 0 0 0"
                FontSize="18"
                    Width="360"
                 TextAlignment="Left"
                            Text="Name"
                            FontWeight="SemiBold"
                ></TextBlock>

                    <TextBlock
                Width="360"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Foreground="White"
                Margin="0 0 100 0"
                FontSize="18"
                TextAlignment="Right"
                            Text="Memo"
                            FontWeight="SemiBold"
                ></TextBlock>

                    <TextBlock
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Foreground="White"
                Margin="0 0 10 0"
                FontSize="18"
                            Text="Duration"
                            FontWeight="SemiBold"
                    ></TextBlock>
                    <Grid
                        Height="1"
                        Background="White"
                        VerticalAlignment="Bottom"
                        ></Grid>
                </Grid>
            </Grid>
            <ScrollViewer
               Margin="0 120 0 60"
                Background="Transparent"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled"
                >
